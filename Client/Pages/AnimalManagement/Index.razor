            <MudTextField @bind-Value="searchInput" Placeholder="Search"  Class="mt-0" 
            Adornment="Adornment.Start" AdornmentColor="Color.Primary"
            AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"
